<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication
    x:Class="MeetAndGoMobile.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:constants="clr-namespace:MeetAndGoMobile.Infrastructure.Constants;assembly=MeetAndGoMobile.Infrastructure"
    xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
    xmlns:userControls="clr-namespace:MeetAndGoMobile.Infrastructure.UserControls;assembly=MeetAndGoMobile.Infrastructure">
    <Application.Resources>

        <!--  Application resource dictionary  -->
        <ResourceDictionary>

            <ControlTemplate x:Key="BaseContentTemplate">
                <userControls:BaseContentTemplate
                    BindingContext="{TemplateBinding BindingContext}"
                    HasNavigationBar="False"
                    NavigationBar="{Binding NavigationBar}" />
            </ControlTemplate>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="{x:Static constants:FontFamily.Default}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>